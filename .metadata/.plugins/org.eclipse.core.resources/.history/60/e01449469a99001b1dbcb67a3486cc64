		for(i=0;i<36;i++){
			ctx.moveTo(c[i], c[i+1]);
			ctx.lineTo(c[i+2], c[i+3]);
			i+=3
		}
		ctx.stroke();
	}

//	오른쪽
	function right(){
		for(i=0;i<36;i++){
			if(!(i==16 || i==24)){
				console.log(i)
				ctx.moveTo(c[i]+60, c[i+1]);
				ctx.lineTo(c[i+2]+60, c[i+3]);
			}
			i+=3
		}
	}

//	왼쪽
	function left(){
		for(i=0;i<36;i++){
			if(!(i==16 || i==20 || i==28 || i==32)){
				console.log(i)
				ctx.moveTo(c[i]-60, c[i+1]);
				ctx.lineTo(c[i+2]-60, c[i+3]);
			}
			i+=3
		}
	}

//	북쪽
	function up(){
		for(i=0;i<36;i++){
			if(!(i==4 || i==8 || i==24 || i==28)){
				console.log(i)
				ctx.moveTo(c[i]+15, c[i+1]-30);
				ctx.lineTo(c[i+2]+15, c[i+3]-30);
			}
			i+=3
		}
	}

// 	위에
	function uptop(){
		for(i=0;i<36;i++){
			if(i==12 || i==0){
				ctx.strokeStyle="red"
				ctx.moveTo(c[i], c[i+1]);
				ctx.lineTo(c[i+2], c[i+3]);
			}
			i+=3
		}
		ctx.stroke();
		for(i=0;i<36;i++){
			if(!(i==8 || i==20)){
				ctx.moveTo(c[i], c[i+1]-30);
				ctx.lineTo(c[i+2], c[i+3]-30);
				ctx.strokeStyle="black"
			}
			i+=3
		}
	}
	
	var canvas = document.getElementById("canvas");
	var ctx = canvas.getContext("2d");
	ctx.beginPath();
	
	square();
	uptop();
// 	up();
// 	left();
// 	right();
	
	ctx.stroke();

	</script>
